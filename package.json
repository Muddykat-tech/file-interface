{
  "name": "@buttercup/file-interface",
  "version": "1.0.1",
  "description": "Client request library interface and explorer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "format": "prettier --write '{source,test}/**/*.{js,ts}'",
    "prepublishOnly": "npm run build",
    "test": "run-s build test:specs test:format",
    "test:format": "prettier --check '{source,test}/**/*.{js,ts}'",
    "test:specs": "nyc mocha -r test/index.js 'test/specs/**/*.spec.js'"
  },
  "files": [
    "dist/**"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{source,test}/**/*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buttercup/file-interface.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "file",
    "interface",
    "explorer",
    "mapper",
    "request"
  ],
  "author": "Perry Mitchell <perry@perrymitchell.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buttercup/file-interface/issues"
  },
  "homepage": "https://github.com/buttercup/file-interface#readme",
  "dependencies": {
    "join-path": "^1.1.1",
    "layerr": "^0.1.2",
    "verror": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "chai": "^4.2.0",
    "directory-exists": "^2.0.1",
    "file-exists": "^5.0.1",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "mocha": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "pify": "^4.0.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "sinon": "^7.4.2",
    "typescript": "^4.4.4"
  }
}
