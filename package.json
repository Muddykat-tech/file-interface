{
  "name": "@buttercup/file-interface",
  "version": "2.0.0",
  "description": "Client request library interface and explorer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "format": "prettier --write '{source,test}/**/*.{js,ts}'",
    "prepublishOnly": "npm run build",
    "test": "run-s build test:specs test:format",
    "test:format": "prettier --check '{source,test}/**/*.{js,ts}'",
    "test:specs": "nyc mocha -r test/index.js 'test/specs/**/*.spec.js'"
  },
  "files": [
    "dist/**"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{source,test}/**/*.{js,ts}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buttercup/file-interface.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "file",
    "interface",
    "explorer",
    "mapper",
    "request"
  ],
  "author": "Perry Mitchell <perry@perrymitchell.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buttercup/file-interface/issues"
  },
  "homepage": "https://github.com/buttercup/file-interface#readme",
  "dependencies": {
    "join-path": "^1.1.1",
    "layerr": "^0.1.2"
  },
  "devDependencies": {
    "@types/node": "^16.11.9",
    "chai": "^4.3.4",
    "directory-exists": "^2.0.1",
    "file-exists": "^5.0.1",
    "husky": "^4.3.8",
    "lint-staged": "^12.1.2",
    "mocha": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "pify": "^4.0.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1",
    "typescript": "^4.5.2"
  }
}
